    <h1 class="fw-800 fs-40 font-roboto" style="text-align: center">Interventions</h1>
    <div class="row no-gutters wow slideInUp" data-wow-duration="1s">
    <div class="col-md-6 col-md-offset-3">
        <%= select_tag 'customer_id', 
            options_for_select(@customers.collect{ |u| [u.company_contact_full_name, u.id] }), 
            class: 'form-control',
            prompt: "Select a Customer"%>
