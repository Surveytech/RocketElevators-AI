<section class="page-header dark">
  <div class="container text-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


  <div class="container-fluid">

    <h1 class="fw-700 fs-40 font-roboto text-center">Sign up</h1>

    <br /><br /><br />
    <div class="form-row justify-content-center">

      <div class="col-md-0"></div>

      <div class="col-md-4 text-center">
          <label for="name" class="fs-18">First Name&nbsp;</label>
          <input id="name" name="user[name]" type="text" class="form-control" placeholder="First name"/>
      </div>

      <div class="col-md-4 text-center">
          <label for="surname" class="fs-18">Last Name&nbsp;</label>
          <input id="surname" name="user[surname]" type="text" class="form-control" placeholder="Last name"/>
      </div>

      <div class="col-md-4"></div>

    </div>

    <br /><br />

    <div class="form-row justify-content-center">

      <div class="col-md-0"></div>


      <div class="col-md-8 text-center">
          <label for="email" class="fs-18">Email&nbsp;</label>
          <input id="email" name="user[email]" type="text" autocomplete="email" class="form-control" placeholder="Email"/>
      </div>

      <div class="col-md-4"></div>

    </div>

    <br /><br />

    <div class="form-row justify-content-center">

      <div class="col-md-0"></div>

      <div class="col-md-4 text-center">
          <label for="password" class="fs-17">Password (6 characters minimum)&nbsp;</label>
          <input id="password" name="user[password]" type="password" autocomplete="new-password" class="form-control" placeholder="Password"/>
      </div>

      <div class="col-md-4 text-center">
          <label for="password" class="fs-17">Password Confirmation&nbsp;</label>
          <input id="confirm_password" name="user[password_confirmation]" type="password" autocomplete="new-password" class="form-control fs-14" placeholder="Password Confirmation"/>
      </div>

      <div class="col-md-4"></div>

    </div>

    <br />

    <div class="form-row justify-content-center">

      <div class="col-md-5"></div>

      <div class="col-md-2 text-center">
          <div class="actions">
          <button type="submit" class="btn btn-outline-primary fs-20">Sign up</button>
          </div>
          <% end %>
      </div>

      <div class="col-md-5"></div>

    </div>

  </div>

  <%= render "devise/shared/links" %>
</section>
