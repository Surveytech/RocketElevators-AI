
<%= simple_form_for(@dg_klead) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :fullNameOfTheContact %>
    <%= f.input :companyName %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :projectName %>
    <%= f.input :projectDescription %>
    <%= f.input :departmentInChargeOfTheElevators %>
    <%= f.input :message %>
    <%# <%= f.input :attachedFileStoredAsABinaryFile %> %>
    <%= f.input :dateOfTheContactRequest %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
