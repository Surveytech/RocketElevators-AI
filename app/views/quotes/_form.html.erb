<body class=" enable-animation bg-grey">
	<!-- Dark Title container -->
	<section class="page-header dark">
		<div class="container text-center">
			<h1 class="fw-800 fs-60 font-latoo">Request A Quote</h1>
		</div>
	</section>

	<script>
		$('document').ready(function () {
			$("select").change(function () {
				getBuildingType();
			});
		});
	</script>

	<section >
		<%= simple_form_for(@quote) do |f| %>
			<%= f.error_notification %>
			<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-xs-6">&nbsp;</div>
				<div class="col-md-4 col-xs-6">
				<div class="form-inputs col-md-4 col-sm-4">
					<%= f.label :name,""%>
					<%= f.input :name%><br/>
					<%= f.label :company_name, "Enter The Name Of Your Company" %>
					<%= f.input :company_name %> <br/>
	  			</div>       
					<!--First Selection, Building Type -->
					<%= f.label :building_type %>
                	<%= f.select(:building_type, Quote::TYPE_LIST) %><br/>
				</div>
				<div class="col-md-2 col-xs-4">&nbsp;</div>
				<div class="col-md-2 col-xs-4">&nbsp;</div>
			</div>
			<div class="row hidden-sm-down">
				<div class="col-md-2 col-xs-4">&nbsp;</div>
				<!--Line Separator-->
				<div class="col-md-8 col-xs-12"> <hr /></div>
				<div class="col-md-2 col-xs-4">&nbsp;</div>
			</div>

			<div class="row">
				<div class="col-md-4 col-sm-4">&nbsp;</div>
				<div class="col-md-4 col-sm-4">
					<!--Questions-->
					<div id="questionInput">
					<div id="number_of_apartments" class="hidden">
                            
					<div class="col-sm-4">
					  <%= f.input :number_of_apartments, min: 0, class:"form-control" %>
					</div>
				  </div>

				  <div id="number_of_floors" class="hidden">              
					<div class="col-sm-4">
					  <%= f.input :number_of_floors, min: 0, class:"form-control" %>
					</div>
				  </div>

				  <div id="number_of_basements" class="hidden">              
					<div class="col-sm-4">
					  <%= f.input :number_of_basements, min: 0, class:"form-control" %>
					</div>
				  </div>

				  <div id="number_of_companies" class="hidden">              
					<div class="col-sm-4">
					  <%= f.input :number_of_companies, min: 0, class:"form-control" %>
					</div>
				  </div>

				  <div id="number_of_parking_spots" class="hidden">
					<div class="col-sm-4">
					  <%= f.input :number_of_parking_spots, min: 0, class:"form-control" %>
					</div>
				  </div>

				  <div id="number_of_elevators" class="hidden">
					<div class="col-sm-4">
					  <%= f.input :number_of_elevators, min: 0, class:"form-control" %>
					</div>
				  </div>

				  <div id="number_of_corporations" class="hidden">              
					<div class="col-sm-4">
					  <%= f.input :number_of_corporations, min: 0, class:"form-control" %>
					</div>
				  </div>

				  <div id="maximum_occupancy" class="hidden">              
					<div class="col-sm-4">
					  <%= f.input :maximum_occupancy, min: 0, class:"form-control" %>
					</div>
				  </div>

				  <div id="business_hours" class="hidden">              
					<div class="col-sm-4">
					  <%= f.input :business_hours, in: 1.0..24.0, class:"form-control" %>
					</div>
				  </div>
					</div>
				</div>
			</div>

			<div class="col-md-4 hidden-sm-down">&nbsp;</div>
		</div>

		<!--New Row-->
		<div class="row hidden-sm-down">
			<div class="col-md-1 ">&nbsp;</div>
			<div class="col-md-3 ">
				&nbsp;
				<label for="estimatedColumns" class="text-right">Recommended Number Of Columns&nbsp;</label> 
			</div>
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
		</div>

		<div class="row ">
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2 ">
				&nbsp;
				<!-- <form> 
					<div id="elevator-amount" class="fancy-form ">
						<i class="fa fa-angle-double-right"></i>
						<input readonly id="estimatedColumns" class="form-control" value="">
					</div>
				</form> -->
			</div>
			<div class="col-md-1 hidden-sm-down">&nbsp;</div>
			<div class="col-md-2">
				<form> <!--Estimated Elevators Form-->
					<div id="elevator-amount" class="fancy-form ">
						<label for="estimatedElevators" class="text-center">Number Of Elevators&nbsp;</label>
						<input readonly id="estimatedElevators" class="form-control" value="">
					</div>
				</form>
				<!-- <element class="sky-form">
					<element class="input">					  
						<input readonly id="estimatedElevators" value="">
					</element>
				</element> -->
			</div>
			<div class="col-md-1 hidden-sm-down">&nbsp;</div>
			<div class="col-md-2">
      <div id="lineSelection" class="text-center">
        <%= f.input :product_line, as: :radio_buttons, collection: Quote::PRODUCT %>
          <script>
            $('#lineSelection input[type=radio]').change(function () {
              price($('#lineSelection input[type=radio]:checked').val());
            });
          </script>    
      </div>
			<div class="col-md-2">&nbsp;</div>
		</div>

		<div class="row hidden-sm-down">
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
		</div>

		<!--Cost Related Label/Text-->
		<div class="row hidden-sm-down">
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">&nbsp;</div>
		</div>
		<!--/Cost Related Label/Text-->

		<!--Price Estimate Forms-->
		<div class="row">
			<div class="col-md-2">&nbsp;</div>
			<div class="col-md-2">
				<div id="elevator-unit-price" class="fancy-form ">
          <%= f.label :elevator_unit_price, "Elevator Unit Price" %>
          <%= f.text_field :elevator_unit_price %><br/>
				</div>
			</div>

			<div class="col-md-2">
				<div id="elevator-total-price" class="fancy-form ">
          <%= f.label :elevator_total_price, "Elevator Total Price" %>
          <%= f.text_field :elevator_total_price %><br/>
				</div>
			</div>

			<div class="col-md-2">
				<div id="installation-fees" class="fancy-form ">
          <%= f.label :installation_price, "Elevator Installation Price" %>
          <%= f.text_field :installation_price %><br/>
				</div>
			</div>

			<div class="col-md-2">
				<div id="final-price" class="fancy-form ">
          <%= f.label :total_price, "Total Price" %>
          <%= f.text_field :total_price %><br/>
				</div>
			</div>
		</div>
		<!--/Price Estimate Forms-->

		<!--Placeholder-->
		<div class="row hidden-sm-down">
			<div class="col-md-2">&nbsp;</div>
			<!--A beautiful line-->
			<div class="col-md-8"> <hr /></div>
			<div class="col-md-2">&nbsp;</div>
		</div>

		<div class="row grid-color">
			<div class="col-md-4">&nbsp;</div>
			<div class="col-md-4">&nbsp;
				<img src="assets/images/R2.png" class="img-fluid">
			</div>
			<div class="col-md-4">&nbsp;</div>
		</div>

		<div class="row hidden-sm-down">
			<div class="col-md-4">&nbsp;</div>
			<div class="col-md-4">&nbsp;</div>
			<div class="col-md-4">&nbsp;</div>
		</div>

		<div class="row hidden-sm-down">
			<div class="col-md-4">&nbsp;</div>
			<div class="col-md-4">&nbsp;</div>
			<div class="col-md-4">&nbsp;</div>
		</div>
		<% end %>
	</section>

