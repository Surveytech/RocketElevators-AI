
<%= simple_form_for(@quote) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs col-md-4 col-sm-4">
    <%= f.input :name %>
    <%= f.input :building_type %>

    Enter The Number Of Appartments :<%= f.number_field :number_of_apartments, min: 0  %> <br/>
    Enter The Number Of Floors :<%= f.number_field :number_of_floors, min: 0  %><br/>
    Enter The Number Of Basements :<%= f.number_field :number_of_basements, min: 0  %> <br/>
    Enter The Number Of Companies :<%= f.number_field :number_of_companies, min: 0  %><br/>
    Enter The Number Of Parking Spots :<%= f.number_field :number_of_parking_spots, min: 0  %><br/>
    Enter The Number Of Elevators : <%= f.number_field :number_of_elevators, min: 0  %><br/>
    Enter The Number Of Corporations :<%= f.number_field :number_of_corporations, min: 0  %><br/>
    Enter The Number Of Occupants Per Floors :<%= f.number_field :maximum_occupancy, min: 0  %><br/>
    Enter The Number Of Hours :<%= f.number_field :business_hours, in: 1.0..24.0  %><br/>

    <%= radio_button_tag(:product_line, "standard") %>
    <%= label_tag(:product_line_standard, "Standard") %>
    <%= radio_button_tag(:product_line, "premium") %>
    <%= label_tag(:product_line_premium, "Premium") %>
    <%= radio_button_tag(:product_line, "excelium") %>
    <%= label_tag(:product_line_excelium, "Excelium") %>


    <%= f.input :elevator_unit_price, :disabled=>true %>
    <%= f.input :elevator_total_price, :disabled=>true %>
    <%= f.input :installation_price, :disabled=>true%>
    <%= f.input :total_price, :disabled=>true%>
   </div>


   <% if user_signed_in? %>
    <div class="form-actions col-md-4 col-sm-4">
      <%= f.button :submit %>
    </div>
    Signed in as <%= current_user.email %>. Not you?
    <%= link_to "Edit profile", edit_user_registration_path %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
    <div class="form-actions col-md-4 col-sm-4">
      <%= f.button :submit, :disabled=> true%>
    </div>
    <%= link_to "Sign up", new_user_registration_path %> or
    <%= link_to "sign in", new_user_session_path %>
    <% end %>
  <div class="col-md-4 col-sm-4">
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
  </div>
<% end %>

